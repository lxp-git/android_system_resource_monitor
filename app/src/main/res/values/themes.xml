<resources>
    <style name="Theme.TopCmd.Base" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:buttonStyle">@style/Widget.TopCmd.Button</item>
    </style>

    <style name="Theme.TopCmd" parent="Theme.TopCmd.Base">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.TopCmd.ActionBar" parent="Theme.TopCmd.Base">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>
</resources>